<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navigation navbar-dark bg-dark">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <h4>Chord Tune</h4>
    <% end %>

    <button class='navbar-toggler' type="button" data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if logged_in? %>
        <li class="nav-item">
          <%= button_to 'ログアウト', logout_path, class: 'btn btn-light', method: :delete %>
        </li>
        <li class="nav-item">
          <%= link_to 'ブックマーク一覧', bookmarks_posts_path, class: 'btn btn-light' %>
        </li>
        <li class="nav-item">
          <%= link_to 'プロフィール', profile_path, class: 'btn btn-light' %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to '新規登録', new_user_path, class: 'btn btn-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログイン', login_path, class: 'btn btn-dark' %>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>